{
  // General
  "editor.lineNumbers": "relative",
  "window.zoomLevel": 1,
  "editor.mouseWheelZoom": true,
  "editor.renderControlCharacters": true,
  "editor.formatOnSave": true,
  // Font size
  "editor.fontSize": 18,
  "debug.console.fontSize": 20,
  "markdown.preview.fontSize": 18,
  "terminal.integrated.fontSize": 17,
  // Don't want update notifications (taken care of by the pkg manager)
  "update.mode": "none",

  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.startupEditor": "newUntitledFile",
  // hide top bar
  "window.menuBarVisibility": "toggle",

  "firefox.executable": "/usr/bin/firefox",
  // When opening a file, `editor.tabSize` and `editor.insertSpaces`
  // will be detected based on the file contents. Set to false to keep
  // the values you've explicitly set, above.
  "editor.detectIndentation": false,

  // The number of spaces a tab is equal to. This setting is overridden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.tabSize": 2,
  "[sass, css]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[javascript, json]": {
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4
  },

  // Insert spaces when pressing Tab. This setting is overriden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.insertSpaces": true,

  // CSS
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  // Python
  "python.showStartPage": false,
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.linting.pylintEnabled": true,
  // Go
  "go.useLanguageServer": true,
  // Latex
  "latex-workshop.view.pdf.viewer": "external",
  "latex-workshop.view.pdf.external.viewer.command": "zathura",
  "latex-workshop.view.pdf.external.viewer.args": [
    "--synctex-editor-command",
    "code --reuse-window -g \"%{input}:%{line}\"",
    "%PDF%"
  ],
  "latex-workshop.view.pdf.external.synctex.command": "zathura",
  "latex-workshop.view.pdf.external.synctex.args": [
    "--synctex-forward=%LINE%:0:%TEX%",
    "%PDF%"
  ],
  "latex-workshop.synctex.afterBuild.enabled": false,
  // Vim Mode
  "vim.easymotion": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-c>": false,
    "<C-v>": false,
    "<C-x>": false,
    "<C-a>": false,
    "<C-w>": true
  },
  "keyboard.dispatch": "keyCode",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["U"],
      "commands": ["redo"]
    },
    {
      "before": ["\"", "+", "p"],
      "after": ["p"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["C"],
      "after": ["\"", "_", "C"]
    },
    {
      "before": ["c", "c"],
      "after": ["\"", "_", "c", "c"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "sync.autoDownload": false,
  "sync.autoUpload": false
}
